import numpy as np
import matplotlib.pyplot as plt
# Generate x values
x = np.linspace(-2, 2, 100)

# Calculate corresponding y values for e^x
y_exp = np.exp(x)

# Plot the exponential function
plt.plot(x, y_exp, label='y = e^x')

# Customize the plot
plt.title('Plot of y = e^x')
plt.xlabel('x')
plt.ylabel('y')
plt.grid(True)
plt.legend()

# Show the plot
plt.show()
